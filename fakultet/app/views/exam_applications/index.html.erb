<p id="notice"><%= notice %></p>

<h1>Exam Applications</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Time</th>
      <th scope="col">Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>

      <tr>
        <td><%= exam.subject.title%></td>
        <td><%= exam.exam_time %></td>
        <td><%= exam.exam_place %></td>
        <td><%= link_to 'Apply', apply_exam_application_path(exam.id) %></td>

      </tr>
<% end %>
  </tbody>
</table>
