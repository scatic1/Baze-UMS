<p id="notice"><%= notice %></p>

<h1>Exam Applications</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Time</th>
      <th>Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>

      <tr>
        <td><%= exam.subject.title%></td>
        <td><%= exam.exam_time %></td>
        <td><%= exam.exam_place %></td>
        <td><%= link_to 'Apply', new_exam_application_path %></td>

      </tr>
<% end %>
  </tbody>
</table>
