<p id="notice"><%= notice %></p>

<h1>Job Advertisements</h1>

<table>
  <thead>
    <tr>
      <th>Work position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_advertisements.each do |job_advertisement| %>
      <tr>
        <td><%= job_advertisement.work_position %></td>
        <td><%= link_to 'Show', job_advertisement %></td>
        <td><%= link_to 'Edit', edit_job_advertisement_path(job_advertisement) %></td>
        <td><%= link_to 'Destroy', job_advertisement, :method => :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

