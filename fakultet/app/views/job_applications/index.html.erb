<p id="notice"><%= notice %></p>

<h1>Job Applications</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Jbmg</th>
      <th>Date of birth</th>
      <th>Place of birth</th>
      <th>Telephone number</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Cv</th>
      <th>Motivation letter</th>
      <th>Job advertisements</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_applications.each do |job_application| %>
      <tr>
        <td><%= job_application.name %></td>
        <td><%= job_application.surname %></td>
        <td><%= job_application.JBMG %></td>
        <td><%= job_application.date_of_birth %></td>
        <td><%= job_application.place_of_birth %></td>
        <td><%= job_application.telephone_number %></td>
        <td><%= job_application.email %></td>
        <td><%= job_application.gender %></td>
        <td><%= job_application.CV %></td>
        <td><%= job_application.motivation_letter %></td>
        <td><%= job_application.job_advertisements_id %></td>
        <td><%= link_to 'Show', job_application %></td>
        <td><%= link_to 'Edit', edit_job_application_path(job_application) %></td>
        <td><%= link_to 'Destroy', job_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

