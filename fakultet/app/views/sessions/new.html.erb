                 <div class="form-group">
                 	<%= label_tag :username%>
				    <%= text_field_tag :username, nil ,class:"form-control col-sm-4" %>
		
			     </div>
			     <div class="form-group">
				<%= label_tag :password ,"Password",:class => "exampleInputPassword1" %>
