  
   
<h1>Log In</h1>

<%=form_tag login_path do%>
                 <div class="form-group">
                 	<%= label_tag :username%>
				    <%= text_field_tag :username, nil  %>
		
			     </div>
			     <div class="form-group">
				<%= label_tag :password ,"Password",:class => "exampleInputPassword1" %>
				<%= password_field_tag :password, nil ,:id => "exampleInputPassword1" %>
				 </div>
			 <div class="form-group">
			<%= submit_tag 'Log in',:class => "login-button" %>
		</div>
<%end  %>

 